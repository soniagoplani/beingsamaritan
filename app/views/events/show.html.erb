<!-- Page Header -->
    <!-- Set your background image for this header on the line below. -->
 
<header class="intro-header"> 
        
                <div class="col-lg-8 col-lg-offset-2 col-md-10 col-md-offset-1">
                    <div class="site-heading">
                        <hr class="small">
                        <h2 style="color:#000">
                        <%= @Ievent.try(:name)%></h2>
                        <hr class="small">
                        <span class="subheading", style="color:#A52A2A">
                        Event date: <%= @Ievent.try(:scheduled_at)%><br>
                        <hr class="small"> 
                        Conducted by: <%= @Ievent.try(:coordinator_name)%> 
                        </span>

                    </div>
                </div>
          
    </header>
<hr class="tagline-divider">
    <!-- Main Content -->
    <div class="container">
        <div class="row">
           <div class="box">
                <div class="col-lg-12 text-center">
                
                    <article>
    
                    <p>
                    <h3 style="color:#000066">
                    Moto behind Event:
                    </h3>
                    <hr class="small">
                    <%= raw(@Ievent.try(:moto)) %>
                    </p>
                     <hr class="small", style="color:#000">
                     </article>
                </div>
            </div>
        </div>
         <% if @Ievent.who_can_participate.present?%>
        <div class="row">
           <div class="box">
                <div class="col-lg-12 text-center">
                
                    <article>
    
                    <p>
                    <h3 style="color:#000066">
                    Participation criteria:
                    </h3>
                    <hr class="small">
                    <%= raw(@Ievent.try(:who_can_participate)) %>
                    </p>
                     <hr class="small", style="color:#000">
                     </article>
                </div>
            </div>
        </div>
        <%end%>
        
        <% if @Ievent.event_cost.present?%>
        <div class="row">
           <div class="box">
                <div class="col-lg-12 text-center">
                
                    <article>
    
                    <p>
                    <h3 style="color:#000066">
                    Event Cost
                    </h3>
                    <hr class="small">
                    <%= raw(@Ievent.try(:event_cost)) %>
                    </p>
                     <hr class="small", style="color:#000">
                     </article>
                </div>
            </div>
        </div>
        <%end%>
         <div class="row">
           <div class="box">
                <div class="col-lg-12 text-center">
                
        <span style="color:#A52A2A">
        
        Duration:      <%= @Ievent.try(:duration)%><br>
        Location:        <%=@Ievent.try(:location)%><br>
        Coordinator's Details:<br>
        Name:     <%=@Ievent.try(:coordinator_name)%><br>
        Email:     <%=@Ievent.try(:coordinator_email)%><br>
        Phone:    <%=@Ievent.try(:coordinator_phone)%>
        </span>
                </div>
            </div>
        </div>

    </div>
    <%= form_for [@Ievent, Participant.new] do |f| %>
  <% if @participant.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@participant.errors.count, "error") %> prohibited this post from being saved:</h2>

      <ul>

      <% @participant.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>
<div class="well">
  <h4>Fill form and apply for volunteering:</h4>
  <div class="field">
     <%= f.hidden_field  :event_id, :value=>@Ievent.id%>
  </div>

  <div class="field">
    <%= f.label :Name %><br>
    <%= f.text_field :name %>
  </div>
  <div class="field">
    <%= f.label :Address %><br>
    <%= f.text_area :address %>
  </div>
  
  <div class="field">
    <%= f.label :Phone_no %><br>
   
    <%= f.text_field :phone %>
  </div>
 
  <div class="actions">
    <%= f.button(type: 'Save', class: "btn btn-primary") do %>
    <i class="icon-ok icon-white"> Save</i>
<%end%>
  </div>
  </div>
<% end %>


<%= render 'participant_form', 
:collection => @Ievent.participants %>

    </article>
                <hr>

  
