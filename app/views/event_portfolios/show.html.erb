<!-- Page Header -->
    <!-- Set your background image for this header on the line below. -->
    <br><br><br><br>
<header class="intro-header"> <%= image_tag(@event.avatar, 
class: "image") %>
<hr class="tagline-divider">
        
                <div class="col-lg-8 col-lg-offset-2 col-md-10 col-md-offset-1">
                    <div class="site-heading">
                        <hr class="small">
                        <h2 style="color:#000"><%= @event.try(:event_name)%></h2>
                        <hr class="small">
                        <span class="subheading", style="color:#A52A2A">Event date: <%= @event.try(:event_date)%><br>
                        <hr class="small"> 
                        Conducted by: <%= @event.try(:organization_name)%> 
                        </span>

                    </div>
                </div>
          
    </header>
<hr class="tagline-divider">
    <!-- Main Content -->
    <div class="container">
        <div class="row">
           <div class="box">
                <div class="col-lg-12 text-center">
                
                    <article>
    
                    <p>
                    <h3 style="color:#000066">
                    Project Description:
                    </h3>
                    <hr class="small">
                    <%= raw(@event.try(:description)) %>
                    </p>
                     <hr class="small", style="color:#000">
                     </article>
                </div>
            </div>
        </div>
         <% if @event.participants.present?%>
        <div class="row">
           <div class="box">
                <div class="col-lg-12 text-center">
                
                    <article>
    
                    <p>
                    <h3 style="color:#000066">
                    Participants of Project:
                    </h3>
                    <hr class="small">
                    <%= raw(@event.try(:participants)) %>
                    </p>
                     <hr class="small", style="color:#000">
                     </article>
                </div>
            </div>
        </div>
        <%end%>
        
        <% if @event.highlights.present?%>
        <div class="row">
           <div class="box">
                <div class="col-lg-12 text-center">
                
                    <article>
    
                    <p>
                    <h3 style="color:#000066">
                    Highlights
                    </h3>
                    <hr class="small">
                    <%= raw(@event.try(:highlights)) %>
                    </p>
                     <hr class="small", style="color:#000">
                     </article>
                </div>
            </div>
        </div>
        <%end%>
         <div class="row">
           <div class="box">
                <div class="col-lg-12 text-center">
                
        <span style="color:#A52A2A">
        Project started at:    <%= @event.event_start.strftime("%I:%M")%><br>
        Project ended at:      <%= @event.event_end.strftime("%I:%M")%><br>
        Project Location:  <%=@event.try(:event_loc)%>
        </span>
                </div>
            </div>
        </div>

    </div>
